<resources>

    <style name="BaseDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:padding">10dp</item>
    </style>

    <style name="DARK_1" parent="BaseDialogStyle">
        <item name="android:background">@drawable/dialog_background_dark</item>
    </style>

    <style name="LIGHT_1" parent="BaseDialogStyle">
        <item name="android:background">@drawable/dialog_background_light</item>
    </style>

    <style name="DialogAnims">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <!--TextView Styles-->
    <style name="BaseText">
        <item name="android:padding">4dp</item>
    </style>

    <!--Header TextView Styles-->
    <style name="BaseHeader" parent="BaseText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header1" parent="BaseHeader">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Header2" parent="BaseHeader">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <!--Message TextView Styles-->
    <style name="BaseMessage" parent="BaseText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Message1" parent="BaseMessage">
        <item name="android:textColor">@color/md_grey_300</item>
    </style>

    <style name="Message2" parent="BaseMessage">
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <!--Button Styles-->
    <style name="BaseButton1">
        <item name="android:background">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseButton2" parent="BaseButton1">
        <item name="android:padding">8dp</item>
    </style>

    <style name="ConfirmButton1" parent="BaseButton1">
        <item name="android:textColor">@color/md_green_600</item>
        <item name="android:text">@string/eb_yes</item>
    </style>

    <style name="ConfirmButton2" parent="BaseButton1">
        <item name="android:textColor">@color/md_light_blue_800</item>
        <item name="android:text">@string/eb_ok</item>
    </style>

    <style name="RefuseButton1" parent="BaseButton1">
        <item name="android:textColor">@color/md_red_900</item>
        <item name="android:text">@string/eb_no</item>
    </style>

    <style name="DefaultWhiteButton" parent="BaseButton2">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="DefaultDarkButton" parent="BaseButton2">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

</resources>